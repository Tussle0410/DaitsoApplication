<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="100"
        >
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:id="@+id/service_center_back_button"
            android:src="@drawable/back_space_img"
            android:backgroundTint="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="76"
            android:text="고객센터"
            android:textSize="35sp"
            android:fontFamily="@font/login_font"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_marginLeft="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:text="어플 사용 전화문의"
                android:textSize="23sp"
                android:gravity="bottom"
                android:fontFamily="@font/login_font"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:text="1234-1234"
                android:textSize="30sp"
                android:fontFamily="@font/login_font"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:text="08:00 ~ 23:00"
                android:textSize="20sp"
                android:fontFamily="@font/login_font"
                />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_marginLeft="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:text="어플 사용 이메일문의"
                android:textSize="23sp"
                android:gravity="bottom"
                android:fontFamily="@font/login_font"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:text="honggildong@gmail.com"
                android:textSize="30sp"
                android:fontFamily="@font/login_font"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:text="08:00 ~ 23:00"
                android:textSize="20sp"
                android:fontFamily="@font/login_font"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:id="@+id/service_center_inquiry_button"
            android:layout_margin="5dp"
            android:backgroundTint="@color/gray"
            android:drawableLeft="@drawable/service_center_inquiry"
            android:text="1:1 문의"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:id="@+id/service_center_inquiry_check_button"
            android:layout_margin="5dp"
            android:backgroundTint="@color/gray"
            android:drawableLeft="@drawable/service_center_inquiry_check"
            android:text="문의 내역"/>
    </LinearLayout>



</LinearLayout>