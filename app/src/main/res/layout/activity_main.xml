<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="100"
    android:padding="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        ></LinearLayout>

    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="25"
        android:padding="10dp"
        android:src="@drawable/reg_main_img"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="vertical"
        android:weightSum="45"
        android:background="@drawable/login_button_border"
        android:padding="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:textColor="@color/black"
            android:text="@string/Login_id_text"
            android:textSize="20dp"></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:id="@+id/login_id"
            android:hint="@string/hint_id"
            android:inputType="textCapWords"
            android:background="@drawable/login_button_border"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:padding="5dp"

            ></EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:textColor="@color/black"
            android:text="@string/Login_pw_text"
            android:textSize="20dp"></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:id="@+id/login_pw"
            android:hint="@string/hint_pw"
            android:textColorHint="@color/black"
            android:inputType="textPassword"
            android:background="@drawable/login_button_border"
            android:textColor="@color/black"
            android:padding="5dp">
        </EditText>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="Saved ID"
            android:id="@+id/login_SaveID_Check"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="100">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/login_button_border"
                android:layout_margin="5dp"
                android:id="@+id/login_button"
                android:text="로그인"
                ></Button>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/login_button_border"
                android:layout_margin="5dp"
                android:text="회원가입"
                android:id="@+id/login_reg_button"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:backgroundTint="@color/white"
        android:text="아아디/비밀번호찾기"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:background="#00ff0000"
        android:id="@+id/login_found_button"/>


</LinearLayout>