<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:id="@+id/dashboard_list_group"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="horizontal"
            android:weightSum="100">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:orientation="vertical"
                android:weightSum="100">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="70"
                    android:id="@+id/dashboard_list_title"
                    android:includeFontPadding="false"
                    android:text="TITLE"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:fontFamily="@font/login_font"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="30"
                    android:id="@+id/dashboard_list_address"
                    android:includeFontPadding="false"
                    android:text="content"
                    android:fontFamily="@font/login_font"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"></TextView>

            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:id="@+id/dashboard_list_category_image"
                android:layout_marginRight="10dp"
                android:src="@drawable/reg_main_img"></ImageView>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:layout_marginLeft="10dp"
                android:text="펑점 : "
                android:textSize="30sp"
                android:fontFamily="@font/login_font"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:textSize="30sp"
                android:fontFamily="@font/login_font"
                android:text="0.0"
                android:gravity="center"
                android:id="@+id/dashboard_list_rating"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:id="@+id/dashboard_list_category"
                android:gravity="right"
                android:text="카테고리"
                android:fontFamily="@font/login_font"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"></TextView>
        </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        />
</LinearLayout>