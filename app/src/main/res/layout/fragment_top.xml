<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.top.TopFragment"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:backgroundTint="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:text="설정"
                android:fontFamily="@font/login_font"
                android:gravity="center"
                android:textSize="40sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@color/gray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            ></LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="13"
            android:text="어플 소개"
            android:textSize="30sp"
            android:textColor="@color/gray"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/login_font"
            app:strokeColor="#000000"
            app:strokeWidth="3dp"
            android:id="@+id/app_introduce_button"
            android:drawableLeft="@drawable/info_icon"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            ></LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="13"
            android:text="랭 킹"
            android:textSize="30sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/login_font"
            android:backgroundTint="@color/white"
            android:id="@+id/ranking_intent_button"
            app:strokeColor="#000000"
            app:strokeWidth="3dp"
            android:drawableLeft="@drawable/ranking"
            /> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        ></LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="13"
            android:text="고객센터"
            android:id="@+id/service_center_intent_button"
            android:fontFamily="@font/login_font"
            android:textSize="30sp"
            android:textColor="@color/gray"
            android:backgroundTint="@color/white"
            app:strokeColor="#000000"
            app:strokeWidth="3dp"
            android:drawableLeft="@drawable/headphones_icon"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            ></LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="13"
            android:text="로그아웃"
            android:textSize="30sp"
            android:textColor="@color/gray"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/login_font"
            android:id="@+id/logout_button"
            app:strokeColor="#000000"
            app:strokeWidth="3dp"
            android:drawableLeft="@drawable/exit_icon"
            /> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        ></LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:textColor="@color/gray"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:text="버전 1.0.0"
            android:fontFamily="@font/login_font"
            android:textSize="30sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>